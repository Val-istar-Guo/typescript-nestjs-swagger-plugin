{
  "compilerOptions": {
    "outDir": "./lib",
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es6",
    "strict": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "noEmitOnError": true,
    "plugins": [{ "transform": "typescript-transform-paths" }]
  },
  "exclude": ["node_modules", "lib"],
  "include": ["**/*.ts", "*.cjs"]
}
